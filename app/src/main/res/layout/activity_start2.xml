<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_trang"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/tex"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/login_logo" />
        <LinearLayout
            android:id="@+id/tex"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Vo"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/color_xanhduong_nhat"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Ca"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/color_xanhla"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Eng"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/color_vangdam"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Lish"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/color_do"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </RelativeLayout>

</layout>