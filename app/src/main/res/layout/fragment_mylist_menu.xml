<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hướng dẫn"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textColor="@color/color_xanhduong_dam"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/btn_tuvung"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Từ vựng"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/color_trangtinh"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/btn_nghe"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Nghe"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/color_trangtinh"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/btn_cautruc"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:text="Cấu trúc"
            android:textColor="@color/color_trangtinh"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/btn_cacthi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_horizontal"
            android:text="Các thì tiếng anh"
            android:textColor="@color/color_trangtinh"
            android:textSize="35dp" />
        <TextView
            android:id="@+id/btn_nguphap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Ngữ pháp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/color_trangtinh"
            android:textSize="35dp" />


    </LinearLayout>
</layout>